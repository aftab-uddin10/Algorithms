#include <iostream>
using namespace std;

int countWays(int A[], int coins, int amount) {
    int dp[coins + 1][amount + 1];

    for (int i = 0; i <= coins; i++) {
        for (int j = 0; j <= amount; j++) {
            if (j == 0)
                dp[i][j] = 1; 
            else if (i == 0)
                dp[i][j] = 0; 
                
            else if (A[i - 1] <= j)
                dp[i][j] = dp[i - 1][j] + dp[i][j - A[i - 1]];
            else
                dp[i][j] = dp[i - 1][j];
        }
    }

    return dp[coins][amount];
}

int main() {
    int A[] = {1, 3, 5};
    int coins = sizeof(A) / sizeof(A[0]);
    int amount = 8;

    cout << "Number of ways : " << countWays(A, coins, amount) << endl;
    return 0;
}
